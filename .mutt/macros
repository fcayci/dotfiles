# muttrc - macros and bindings

macro index,pager  a "<pipe-message>abook --add-email-quiet<return>" "Add this sender to Abook"

macro index,pager  A "<save-message>=[Gmail]/All <enter><enter>" "Archive Message"
macro index,pager  I "<save-message>=[Gmail]/Important<enter><enter>" "Mark Message as Important"
macro index,pager  S "<save-message>=[Gmail]/Starred<enter><enter>" "Star Message"
macro index,pager  ! "<save-message>=[Gmail]/Spam<enter><enter>" "Report spam"

macro pager     <F4> "<pipe-message> ripmime -i - -d ~/downs && rm ~/downs/textfile*" "Save all non-text attachments using ripmime"
macro pager      \cu "<pipe-message> urlscan<Enter>" "call urlscan to extract URLs out of a message"

bind index             g  noop
bind index       <space>  noop
bind index            gg  first-entry
bind index             G  last-entry
bind index          <F5>  imap-fetch-mail

bind index,pager       s  flag-message
bind index,pager       m  noop
bind index,pager       c  mail
bind index,pager       @  compose-to-sender
bind index,pager    <F2>  sidebar-toggle-visible
bind index,pager  <down>  sidebar-next
bind index,pager    <up>  sidebar-prev
bind index,pager <right>  sidebar-open
bind index,pager       R  group-reply

bind pager             k  previous-line
bind pager             j  next-line
bind pager             g  noop
bind pager            gg  top
bind pager             G  bottom

bind editor        <Tab>  complete-query

